{
  "name": "ava-senai",
  "version": "1.0.0",
  "description": "Sistema AVA SENAI - Plataforma de Aprendizado Virtual",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && go run cmd/api/main.go",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && go build -o bin/api cmd/api/main.go",
    "install": "npm run install:frontend && npm run install:backend",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && go mod download",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "migrate": "cd backend && go run cmd/migrate/main.go",
    "seed": "cd backend && go run cmd/seed/main.go",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm run test",
    "test:backend": "cd backend && go test ./...",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && golangci-lint run",
    "clean": "rm -rf frontend/dist backend/bin",
    "start": "npm run build && npm run start:backend",
    "start:backend": "cd backend && ./bin/api"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "ava",
    "senai",
    "educação",
    "plataforma",
    "aprendizado",
    "virtual"
  ],
  "author": "SENAI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/senai/ava-senai.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
} 